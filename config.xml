<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
        xmlns:gap	= "http://phonegap.com/ns/1.0"
        id		   = "com.audero.free.utility.whereiparkedmycar"
        version 	= "1.0.0">

   <name>SmartHotel</name>

<content src="index.html"/>

<description>
Powerfull Guest Tools for hospitality services.
</description>

 <author href="http://wifienter.com" email="alejandro.c@wifienter.net">
Wifientertainment SAS - By Alejandro Osorio 2014
</author>

   <icon src="icon.png" gap:role="default" />

   <feature name="http://api.phonegap.com/1.0/network"/>
   <feature name="http://api.phonegap.com/1.0/geolocation"/>

   <preference name="phonegap-version" value="3.7.0" />
   <preference name="target-device" value="universal" />

   <!-- Splash Screens -->
   <gap:splash src="splash.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="splash.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="splash.png" gap:platform="android" gap:density="hdpi" />

<gap:splash src="splash.png" gap:platform="ios" gap:density="ldpi" />
<gap:splash src="splash.png" gap:platform="ios" gap:density="mdpi" />
<gap:splash src="splash.png" gap:platform="ios" gap:density="hdpi" />

<access origin="*" browserOnly="true" />
</widget>